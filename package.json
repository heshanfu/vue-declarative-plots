{
  "name": "vue-declarative-plots",
  "version": "1.0.0",
  "repository": "https://github.com/keller-mark/vue-declarative-plots",
  "author": "Mark Keller",
  "license": "MIT",
  "private": false,
  "main": "dist/vue-declarative-plots.js",
  "scripts": {
    "serve": "vue-cli-service serve --open ./examples-src/index.js",
    "build:release": "vue-cli-service build --target lib ./src/index.js",
    "build:examples": "vue-cli-service build --dest examples ./examples-src/index.js",
    "lint": "vue-cli-service lint ./src/index.js",

    "docs": "documentation build src/** -f html -o docs",
    "test": "jest",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "dependencies": {
    "d3": "^5.7.0",
    "d3-delaunay": "4.1.3",
    "lodash": "^4.17.11",
    "save-svg-as-png": "^1.4.6"
  },
  "devDependencies": {
    "vue": "^2.5.13",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "documentation": "^8.1.2",
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
